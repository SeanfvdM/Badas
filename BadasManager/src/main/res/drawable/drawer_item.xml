<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:alpha="0.3" android:color="@color/colorPrimary" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorError"/>
            <stroke android:color="@color/colorStroke" android:width="1dp"/>
            <padding android:left="8dp" android:right="8sp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>
    <item android:alpha="0.3" android:color="@color/colorPrimary" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorError"/>
            <stroke android:color="@color/colorStroke" android:width="1dp"/>
            <padding android:left="8dp" android:right="8sp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>
    <item android:alpha="0.3" android:color="@color/colorPrimary" android:state_active="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorError"/>
            <stroke android:color="@color/colorStroke" android:width="1dp"/>
            <padding android:left="8dp" android:right="8sp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>
    <item android:alpha="0.3" android:color="@color/colorPrimary" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorError"/>
            <stroke android:color="@color/colorStroke" android:width="1dp"/>
            <padding android:left="8dp" android:right="8sp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>
    <item android:color="@color/colorItemBackground"/>
</selector>