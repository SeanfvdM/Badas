<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <inset android:insetBottom="4dp" android:insetTop="4dp" android:insetRight="8dp" android:insetLeft="8dp">
            <shape android:shape="rectangle">
                <solid  android:color="@color/colorPrimarySelected"/>
                <stroke android:color="@color/colorPrimary" android:width="1dp"/>
                <corners android:bottomLeftRadius="8dp" android:topRightRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="8dp"/>
            </shape>
        </inset>
    </item>
